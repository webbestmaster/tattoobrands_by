<% @body_id = 'cart' %>
<div class="width-limiter cart-wrapper">
  <h1 class="cart-header"><%= Spree.t(:shopping_cart) %></h1>
  <% if @order.line_items.empty? %>
    <div data-hook="empty_cart" class="empty-cart">
      <div class="alert alert-info"><%= Spree.t(:your_cart_is_empty) %></div>
      <%= link_to Spree.t(:continue_shopping), products_path, class: 'continue-shopping' %>
    </div>
  <% else %>
    <%= form_for @order, url: update_cart_path, html: { id: 'update-cart' } do |order_form| %>
      <%= render partial: 'form', locals: { order_form: order_form } %>

      <div class="table-basket-buttons-wrapper clear-fix">
        <%= link_to Spree.t(:continue_shopping), products_path, class: 'continue-shopping' %>

        <%= button_tag class: 'goods-item-required-submit goods-item-required-submit-bigger', name: 'checkout' do %>
          <%= Spree.t(:checkout) %>
        <% end %>
        <%= button_tag class: 'goods-item-required-submit-small hidden', id: 'update-button' do %>
          <%= Spree.t(:update) %>
        <% end %>
      </div>
    <% end %>

    <div class="hidden">
      <%= form_tag empty_cart_path, method: :put do %>
        <p id="clear_cart_link" data-hook>
          <%= submit_tag Spree.t(:empty_cart), class: 'btn btn-default' %>
        </p>
      <% end %>
    </div>

  <% end %>
</div>
