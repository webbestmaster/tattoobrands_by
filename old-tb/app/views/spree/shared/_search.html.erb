<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>

<%= form_tag spree.products_path, :method => :get do %>
  <div class="form-group" style="display: none">
    <% cache(cache_key_for_taxons) do %>
      <%= select_tag :taxon,
            options_for_select([[Spree.t(:all_departments), '']] +
                                  @taxons.map {|t| [t.name, t.id]},
                                  @taxon ? @taxon.id : params[:taxon]), 'aria-label' => 'Taxon', class: "form-control" %>
    <% end %>
  </div>
  <%= text_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), class: "header-search-input js-header-search-input", autocomplete: "off", required: "required" %>
  <input type="submit" class="header-search-submit" value="search">
<% end %>
