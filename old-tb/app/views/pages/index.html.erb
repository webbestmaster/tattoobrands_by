<%- model_class = Page -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.id, main_app.page_path(page) %></td>
        <td><%= page.title %></td>
        <td>
          <%= link_to 'Редактировать', main_app.edit_page_path(page), class: 'btn btn-default btn-xs' %>
          <%= link_to 'Удалить',
                      main_app.page_path(page),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Новая страница', main_app.new_page_path, class: 'btn btn-primary' %>
