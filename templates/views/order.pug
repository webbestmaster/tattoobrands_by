extends ../layouts/wrapper

block content
    div.width-limiter.width-limiter--big-padding
        div.js-pdf-order.pdf-order.hidden

        if header
            h2.page-header= header

        div.js-pdf

            h2.page-header Заказ:&nbsp;#
                != order.name
                != ' | ' + order.createdAtFormat.replace(/\s/gi, '&nbsp;')
                = ' | '
                - var state = order.state
                if state === 'in-processing'
                    | в&nbsp;обработке
                if state === 'confirmed'
                    | подтверждён
                if state === 'canceled'
                    | отменён

            script
                != 'window.app = window.app || {};'
                != 'window.app.order =' + JSON.stringify(order) + ';'

            div.js-table-order
