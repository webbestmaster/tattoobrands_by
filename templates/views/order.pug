extends ../layouts/wrapper

block content
    div.width-limiter.width-limiter--big-padding
        a(href='/api/pdf-order/' + slug + '.pdf' download='tattoobrands.by-' + slug + '.pdf').js-pdf-order.pdf-order

        if header
            h2.page-header= header

        //div.js-pdf

            h2.page-header Заказ:&nbsp;#
                != order.name
                != ' | ' + order.createdAtFormat.replace(/\s/gi, '&nbsp;')
                = ' | '
                - var state = order.state
                if state === 'in-processing'
                    | в&nbsp;обработке
                if state === 'confirmed'
                    | подтверждён
                if state === 'canceled'
                    | отменён

            div.js-table-order
        != orderHtml
